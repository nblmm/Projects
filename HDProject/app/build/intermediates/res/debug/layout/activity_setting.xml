<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_Setting"
        android:layout_marginTop="20dp"
        android:background="@drawable/alan1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alan"
        android:id="@+id/txt_name_setting"
        android:layout_below="@+id/imageView_Setting"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        android:id="@+id/txt_gap6_Setting"
        android:layout_below="@+id/txt_name_setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb"
        android:id="@+id/textView7_Setting"
        android:layout_below="@+id/txt_gap6_Setting"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Location Collection Service"
        android:id="@+id/btn_StopStartLocationCollection_Setting"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|start"
        android:layout_below="@+id/txt_gap6_Setting"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb"
        android:id="@+id/txt_gap1_Setting"
        android:layout_below="@+id/btn_StopStartLocationCollection_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Generating Random Moments"
        android:id="@+id/btn_StopStartRandomMoments_Setting"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:layout_below="@+id/txt_gap1_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb"
        android:id="@+id/txt_gap2_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_StopStartRandomMoments_Setting"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop auto login"
        android:id="@+id/btn_Remember_Setting"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:layout_below="@+id/txt_gap2_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb"
        android:id="@+id/txt_gap3_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_Remember_Setting"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btn_Logout_Setting"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:layout_below="@+id/txt_gap3_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffebebeb"
        android:id="@+id/txt_gap4_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_Logout_Setting"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Homepage"
        android:id="@+id/btn_Home_Setting"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:layout_below="@+id/txt_gap4_Setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|start"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

